<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#333</item>
        <item name="android:actionMenuTextColor">#333</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#FCFCFC</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--<item name="homeAsUpIndicator">@android:color/white</item>-->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>
    <style name="SnackBar" parent="Widget.Design.Snackbar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="MyActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@android:color/white</item>
    </style>
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
